---
import "../styles/style.css";
---

<article>
  <div class="form-container">
    <form action="post" method="post">
      <h1>Send me a message</h1>
      <label for="name">Name</label>
      <input type="text" id="name" name="name" placeholder="Your name" />
      <label for="email">Email</label>
      <input type="email" id="email" name="email" placeholder="Your email" />
      <label for="message">Message</label>
      <textarea id="message" name="message" placeholder="Your message"
      ></textarea>
      <button type="submit">Send</button>
    </form>

    <div class="contact-info">
      <h2>Contact info</h2>
      <h3>Label</h3>
      <p>
        Warner Music Denmark <br /> Falkoner Allé 7, 3. sal 2000 Frederiksberg Danmark
        <br />
        Telefon: +45 36 93 54 00 denmark.reception@warnermusic.com
      </p>
      <h3>Management</h3>
      <p>Jesper Nordraak Green</p>
      <h3>Bookings</h3>
      <p>
        Prime Music <br />
        Nyhavn 43A, 2.th. <br />
        1051 København K <br />
      </p>
    </div>
  </div>
</article>

<style>
  h1 {
    padding: 1rem;
    text-align: center;
    color: var(--black-color);
  }

  article {
    display: flex;
    justify-content: center;
    align-items: center;
    height: auto;
    margin: auto;
    padding: 1rem;
    border-radius: 20px;
    /* background-color: var(--white-color); */
    margin-top: 100px;
  }

  .form-container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    background-color: var(--white-color);
    padding: 1rem;
    border-radius: 20px;
    box-shadow:
      0 4px 8px rgba(0, 0, 0, 0.1),
      0 6px 20px rgba(0, 0, 0, 0.1);
  }

  form {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    background-color: var(--white-color);
  }

  label {
    padding: 0.5rem;
    text-align: left;
    color: var(--black-color);
  }

  input,
  textarea {
    padding: 1rem;
    border-radius: 10px;
    border: 1px solid var(--black-color);
    background-color: var(--white-color);
    color: var(--black-color);
    width: 100%;
  }

  button {
    display: block;
    margin: auto;
    padding: 1rem;
    border-radius: 10px;
    background-color: var(--black-color);
    color: var(--green-color);
    cursor: pointer;
  }

  .contact-info {
    color: var(--black-color);
    text-align: center;
    padding: 2rem;
  }

  .contact-info h2,
  .contact-info h3 {
    margin: 0.5rem 0;
  }

  .contact-info p {
    margin: 0.5rem 0;
  }
</style>
