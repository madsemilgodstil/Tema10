---
import "../styles/style.css";
---

<nav>
  <li class="icon-link">
    <img class="icon" src="../public/instagram.png" alt="instagram" />
    <img class="icon" src="../public/spotify.svg" alt="spotify" />
    <img class="icon" src="../public/search.svg" alt="search" />
  </li>
  <li><img id="logo" src="../public/logo-green.png" alt="logo" /></li>
  <li>
    <img id="burger" src="../public/burger.png" alt="burger" />
  </li>
  <div id="dropdown-menu" class="dropdown-menu">
    <a href="#">Events</a>
    <a href="#">Merch</a>
    <a href="#">About</a>
    <a href="#">Contact</a>
  </div>
</nav>

<style>
  nav {
    display: flex;
    width: 100%;
    align-items: center;
    padding: 1rem;
    background-color: var(--tertiary-color);
  }

  li {
    width: 100%;
    list-style-type: none;
    display: flex;
    align-items: center;
    justify-content: space-around;
  }

  .icon-link {
    display: flex;
    justify-content: space-evenly;
    float: left;
  }

  a {
    text-decoration: none;
    display: block;
    padding: 1rem;
    font-size: var(--font-size-large);
    color: var(--green-color);
  }

  img {
    cursor: pointer;
    transition: transform 0.3s ease-in-out;
  }

  img:hover {
    transform: scale(1.2);
  }

  #logo {
    max-width: 50%;
  }

  #burger {
    max-width: 10%;
  }

  .icon {
    max-width: 10%;
  }

  .dropdown-menu {
    display: none;
    position: absolute;
    top: 50px;
    right: 0px;
    background-color: var(--black-color);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    z-index: 1;
    width: 100%;
    height: 100%;
  }

  .dropdown-menu a {
    padding: 50px 16px;
    text-decoration: none;
    display: block;
    text-align: center;
  }

  .dropdown-menu a:hover {
    background-color: var(--green-color);
    color: var(--black-color);
  }

  .menu-open .dropdown-menu {
    display: block;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    var burgerIcon = document.getElementById("burger");
    var menu = document.querySelector("nav");
    var dropdownMenu = document.getElementById("dropdown-menu");

    burgerIcon.addEventListener("click", function () {
      menu.classList.toggle("menu-open");
    });
  });
</script>
