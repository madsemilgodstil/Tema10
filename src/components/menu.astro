---
import "../styles/style.css";
---

<nav>
  <li class="icon-link">
    <a href="https://www.instagram.com/faustix/" target="_blank">
      <img
        class="icon"
        src="http://frederikkevolkdal.com/iconer_faustix/icons/some/insta-green.svg"
        alt="instagram"
      />
    </a>
    <a
      href="https://open.spotify.com/embed/artist/6jPriOYMyUL9kNonBI1CNd?utm_source=generator"
      target="_blank"
    >
      <img
        class="icon"
        src="http://frederikkevolkdal.com/iconer_faustix/icons/some/spoti-green.svg"
        alt="spotify"
      /></a
    >
    <a>
      <img
        class="search"
        src="http://frederikkevolkdal.com/iconer_faustix/icons/some/search-green.svg"
        alt="search"
      /></a
    >
  </li>
  <li>
    <a href="/"
      ><img
        id="logo"
        src="http://frederikkevolkdal.com/iconer_faustix/logo/logo-green.svg"
        alt="logo"
      /></a
    >
  </li>
  <li>
    <img
      id="burger"
      src="http://frederikkevolkdal.com/iconer_faustix/burger/burger-green.svg"
      alt="burger"
    />
  </li>
  <div id="dropdown-menu" class="dropdown-menu">
    <a href="/events">Events</a>
    <a href="/merch">Merch</a>
    <a href="/about">About</a>
    <a href="/contact">Contact</a>
  </div>
</nav>

<style>
  nav {
    display: flex;
    width: 100%;
    align-items: center;
    padding: 1.5rem;
    background-color: var(--black-color);
  }

  li {
    width: 100%;
    text-align: center;
    list-style-type: none;
    display: flex;
    align-items: center;
    justify-content: space-around;
  }

  .icon-link {
    display: flex;
    justify-content: space-evenly;
  }

  a {
    text-decoration: none;
    display: block;
    padding: 1rem;

    font-size: 2rem;
    color: var(--green-color);
  }

  img {
    cursor: pointer;
    transition: transform 0.3s ease-in-out;
  }

  img:hover {
    transform: scale(1.2);
  }

  #logo {
    max-width: 50%;
  }

  #burger {
    max-width: 10%;
    margin-left: 50%;
  }

  .icon {
    width: 100%;
  }

  .search {
    width: 100%;
  }

  @media screen and (min-width: 800px) {
    #burger {
      max-width: 10%;
      margin-left: 50%;
    }

    .icon {
      width: 50%;
    }

    .search {
      width: 50%;
    }
  }

  .dropdown-menu {
    display: none;
    position: absolute;
    top: 15%;
    right: 0px;
    background-color: var(--black-color);
    z-index: 1;
    width: 100%;
    height: 100%;
  }

  @media screen and (min-width: 768px) {
    .dropdown-menu {
      display: none;
      position: absolute;
      top: 16%;
      right: 0px;
      background-color: var(--black-color);
      z-index: 1;
      width: 100%;
      height: 100%;
    }
    .dropdown-menu a {
      padding: 50px 16px;
      text-decoration: none;
      display: block;
      text-align: center;
      font-size: 3rem;
      color: var(--green-color);
    }
  }

  .dropdown-menu a {
    padding: 50px 16px;
    text-decoration: none;
    display: block;
    text-align: center;
    color: var(--green-color);
  }

  .dropdown-menu a:hover {
    background-color: var(--green-color);
    color: var(--black-color);
    transform: scale(1.2);
  }

  .menu-open .dropdown-menu {
    display: block;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    var burgerIcon = document.getElementById("burger");
    var menu = document.querySelector("nav");
    var dropdownMenu = document.getElementById("dropdown-menu");

    burgerIcon.addEventListener("click", function () {
      menu.classList.toggle("menu-open");
    });

    var modal = document.getElementById("searchModal");
    var searchIcon = document.querySelector('img[alt="search"]');
    var closeBtn = document.getElementsByClassName("close")[0];

    searchIcon.addEventListener("click", function () {
      modal.style.display = "block";
    });

    closeBtn.addEventListener("click", function () {
      modal.style.display = "none";
    });

    window.onclick = function (event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    };
  });
</script>
