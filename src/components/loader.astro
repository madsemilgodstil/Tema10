<astro-fragment>
  <div class="loading-screen">
    <div class="loading-animation"></div>
  </div>
</astro-fragment>

<style>
  .loading-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
  }

  .loading-animation {
    width: 300px; /* Adjust size as needed */
    height: 300px; /* Adjust size as needed */
    /* background-image: url("../public/candy-green.svg"); */
    object-fit: contain;
    background-repeat: no-repeat;
    animation: pulse 3s infinite; /* Adjust animation duration as needed */
  }

  @keyframes pulse {
    0%,
    100% {
      background-image: url("../public/candy-green.svg");
    }
    50% {
      background-image: url("../public/candy-green.svg");
    }
    0% {
      transform: scale(0.8);
    }
    50% {
      transform: scale(1);
    }
    100% {
      transform: scale(0.8);
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    var loader = document.querySelector(".loading-screen");
    if (loader) {
      (loader as HTMLElement).style.display = "flex"; // Show the loader
    }

    setTimeout(function () {
      var loader = document.querySelector(".loading-screen");
      if (loader) {
        (loader as HTMLElement).style.display = "none"; // Hide the loader after 2 seconds
      }
    }, 3000); // 2000 milliseconds = 2 seconds
  });
</script>
