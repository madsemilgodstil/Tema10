<astro-fragment>
  <div class="loading-screen">
    <div class="loading-animation"></div>
  </div>
</astro-fragment>

<style>
  .loading-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.8);
    display: none; /* Initially hide the loader */
    justify-content: center;
    align-items: center;
    z-index: 9999;
  }

  .loading-animation {
    width: 300px; /* Adjust size as needed */
    height: 300px; /* Adjust size as needed */
    animation: pulse 2s infinite; /* Adjust animation duration as needed */
    background-image: url("../public/candy-green.svg"),
      url("../public/candy-red.svg");
    background-size:
      50% 100%,
      50% 100%;
    background-position: left, right;
    background-repeat: no-repeat;
    mask: radial-gradient(circle, transparent 25%, black 70%);
    -webkit-mask: radial-gradient(circle, transparent 25%, black 70%);
  }

  @keyframes pulse {
    0% {
      transform: scale(0.8);
    }
    50% {
      transform: scale(1);
    }
    100% {
      transform: scale(0.8);
    }
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    showLoader();
  });

  function showLoader() {
    var loader = document.querySelector(".loading-screen");
    if (loader instanceof HTMLElement) {
      loader.style.display = "flex"; // Show the loader
    }
  }

  window.addEventListener("load", function () {
    hideLoader();
  });

  function hideLoader() {
    var loader = document.querySelector(".loading-screen");
    if (loader instanceof HTMLElement) {
      loader.style.display = "none"; // Hide the loader
    }
  }
</script>
