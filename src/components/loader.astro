---
import "../styles/style.css";
---

<astro-fragment>
  <div class="loading-screen">
    <div class="loading-animation"></div>
  </div>
</astro-fragment>

<style>
  .loading-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: var(--black-color);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
  }

  .loading-animation {
    width: 300px;
    height: 300px;
    object-fit: cover;
    background-repeat: no-repeat;
    animation: pulse 3s infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      background-image: url("http://frederikkevolkdal.com/iconer_faustix/icons/candy/candy-red.svg");
    }
    50% {
      background-image: url("http://frederikkevolkdal.com/iconer_faustix/icons/candy/candy-green.svg");
    }
    0% {
      transform: scale(0.8);
    }
    50% {
      transform: scale(1);
    }
    100% {
      transform: scale(0.8);
    }
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", function () {
    var loader = document.querySelector(".loading-screen");
    if (loader instanceof HTMLElement) {
      loader.style.display = "flex";
    }

    setTimeout(function () {
      var loader = document.querySelector(".loading-screen");
      if (loader instanceof HTMLElement) {
        loader.style.display = "none";
      }
    }, 3000);
  });
</script>
