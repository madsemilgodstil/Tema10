---
import "../styles/style.css";
---

<footer>
  <div class="container_1">
    <a href="https://www.facebook.com/FaustixMusic/" target="_blank">
      <img src="../public/icons/some/face-white.svg" alt="facebook" />
    </a>
    <a href="https://www.instagram.com/faustix/" target="_blank">
      <img src="../public/icons/some/insta-white.svg" alt="instagram" />
    </a>
    <a
      href="https://open.spotify.com/artist/6jPriOYMyUL9kNonBI1CNd?si=alClfu39S5KM8HAv8tXKIQ"
      target="_blank"
    >
      <img src="public/icons/some/spoti-white.svg" alt="spotify" />
    </a>
    <a href="https://www.tiktok.com/@faustixofficial" target="_blank">
      <img src="public/icons/some/tiktok-white.svg" alt="tiktok" />
    </a>
  </div>
  <div class="container_2">
    <a href="#">
      <img src="public/icons/some/search-white.svg" alt="search" />
    </a>
    <a href="#"><img src="public/icons/some/top-white.svg" alt="top" /></a>
  </div>
  <iframe
    style="border-radius:12px"
    src="https://open.spotify.com/embed/artist/6jPriOYMyUL9kNonBI1CNd?utm_source=generator"
    width="100%"
    height="200"
    frameborder="0"
    allowfullscreen
    allow="autoplay; clipboard-write; encrypted-media; fullscreen; picture-in-picture"
    loading="lazy"></iframe>
</footer>

<style>
  footer {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: 1fr 1fr 1fr;
    background-color: var(--black-color);
    color: var(--quaternary-color);
    padding: 1rem;
    margin-top: 100px;
  }

  iframe {
    grid-column: 1 / 3;
    grid-row: 3 / 4;
    width: 100%;
    height: 100%;
    margin-top: 1%;
  }

  .container_1 {
    grid-column: 1 / 3;
    grid-row: 2 / 3;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    gap: 5rem;
  }

  .container_2 {
    grid-column: 1 / 3;
    grid-row: 1 / 2;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    gap: 5rem;
  }

  .container a {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  img {
    max-width: 45%;
    object-fit: cover;
    cursor: pointer;
    transition: transform 0.3s ease-in-out;
  }

  img:hover {
    transform: scale(1.2);
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    var modal = document.getElementById("searchModal");
    var btn = document.querySelector('a[href="#"] img[alt="search"]');
    var span = document.getElementsByClassName("close")[0];

    // When the user clicks the button, open the modal
    btn.onclick = function () {
      modal.style.display = "block";
    };

    // When the user clicks on <span> (x), close the modal
    span.onclick = function () {
      modal.style.display = "none";
    };

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
      if (event.target == modal) {
        modal.style.display = "none";
      }
    };
  });
</script>
